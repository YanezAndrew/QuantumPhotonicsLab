        <ListBox Height="235" HorizontalAlignment="Left" Margin="28,41,0,0" Name="AvailableList" VerticalAlignment="Top" Width="235" />
        <ListBox Height="235" HorizontalAlignment="Left" Margin="377,41,0,0" Name="ExperimentList" VerticalAlignment="Top" Width="235" />
